<h3>Comments</h3>
<% @post.comments.each do |comment| %>
    <div class="alert alert-secondary">
        <p><strong><%= comment.username %>: <%= comment.body %></strong></p>
        <%= link_to '[X]', [comment.post, comment],
            method: :delete,
            data: {confirm: "Are you sure you want to delete this comment?"}
        %>
    </div>
<% end %>

